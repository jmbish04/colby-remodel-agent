---
import Layout from '@/layouts/Layout.astro';
import { buttonVariants } from '@/components/ui/button';
import { LayoutDashboard, Users, Clipboard, DollarSign } from 'lucide-react';
import '@/styles/globals.css'
---

<Layout title="Admin Dashboard - Colby Remodel Agent">
  <main class="container mx-auto p-4">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold">Admin Dashboard</h1>
        <p class="text-muted-foreground mt-2">Manage your renovation projects and team</p>
      </div>
      <div class="flex gap-4">
        <a class={buttonVariants({ variant: 'outline' })} href="/chat">
          AI Assistant
        </a>
        <a class={buttonVariants({ variant: 'outline' })} href="/">
          Home
        </a>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border">
        <div class="flex items-center space-x-2">
          <LayoutDashboard class="h-5 w-5 text-blue-600" />
          <h3 class="font-semibold">Active Projects</h3>
        </div>
        <p class="text-2xl font-bold mt-2">3</p>
        <p class="text-sm text-muted-foreground">2 in progress, 1 planning</p>
      </div>

      <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border">
        <div class="flex items-center space-x-2">
          <Users class="h-5 w-5 text-green-600" />
          <h3 class="font-semibold">Contractors</h3>
        </div>
        <p class="text-2xl font-bold mt-2">5</p>
        <p class="text-sm text-muted-foreground">All active and available</p>
      </div>

      <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border">
        <div class="flex items-center space-x-2">
          <Clipboard class="h-5 w-5 text-orange-600" />
          <h3 class="font-semibold">Tasks</h3>
        </div>
        <p class="text-2xl font-bold mt-2">12</p>
        <p class="text-sm text-muted-foreground">7 pending, 5 completed</p>
      </div>

      <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border">
        <div class="flex items-center space-x-2">
          <DollarSign class="h-5 w-5 text-purple-600" />
          <h3 class="font-semibold">Total Budget</h3>
        </div>
        <p class="text-2xl font-bold mt-2">$135K</p>
        <p class="text-sm text-muted-foreground">Across all projects</p>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border p-6">
        <h2 class="text-xl font-semibold mb-4">Recent Projects</h2>
        <div class="space-y-4">
          <div class="flex items-center justify-between p-3 bg-muted rounded-lg">
            <div>
              <h3 class="font-medium">Kitchen Remodel</h3>
              <p class="text-sm text-muted-foreground">123 Main St</p>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium">35% Complete</p>
              <p class="text-xs text-muted-foreground">Due Dec 15</p>
            </div>
          </div>
          
          <div class="flex items-center justify-between p-3 bg-muted rounded-lg">
            <div>
              <h3 class="font-medium">Bathroom Renovation</h3>
              <p class="text-sm text-muted-foreground">456 Oak Ave</p>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium">Planning</p>
              <p class="text-xs text-muted-foreground">Starts Oct 1</p>
            </div>
          </div>
          
          <div class="flex items-center justify-between p-3 bg-muted rounded-lg">
            <div>
              <h3 class="font-medium">Deck Addition</h3>
              <p class="text-sm text-muted-foreground">789 Pine St</p>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium">Planning</p>
              <p class="text-xs text-muted-foreground">Starts Nov 1</p>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border p-6">
        <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <a 
            href="/admin/tasks" 
            class="p-4 border border-blue-200 bg-blue-50 dark:bg-blue-950 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900 transition-colors"
          >
            <h3 class="font-medium mb-2 text-blue-900 dark:text-blue-100">
              üìã Task Board
            </h3>
            <p class="text-sm text-blue-700 dark:text-blue-300 mb-3">
              Drag and drop kanban board for tracking renovation tasks and progress.
            </p>
            <span class="text-sm font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400">
              Open Kanban ‚Üí
            </span>
          </a>
          
          <a 
            href="/admin/timeline" 
            class="p-4 border border-green-200 bg-green-50 dark:bg-green-950 rounded-lg hover:bg-green-100 dark:hover:bg-green-900 transition-colors"
          >
            <h3 class="font-medium mb-2 text-green-900 dark:text-green-100">
              üìÖ Project Timeline
            </h3>
            <p class="text-sm text-green-700 dark:text-green-300 mb-3">
              Gantt chart view for visualizing project schedules and dependencies.
            </p>
            <span class="text-sm font-medium text-green-600 hover:text-green-500 dark:text-green-400">
              Open Timeline ‚Üí
            </span>
          </a>
          
          <a 
            href="/admin/tasks-view" 
            class="p-4 border border-purple-200 bg-purple-50 dark:bg-purple-950 rounded-lg hover:bg-purple-100 dark:hover:bg-purple-900 transition-colors"
          >
            <h3 class="font-medium mb-2 text-purple-900 dark:text-purple-100">
              üìä Task Analytics
            </h3>
            <p class="text-sm text-purple-700 dark:text-purple-300 mb-3">
              Comprehensive task management with data tables and advanced filtering.
            </p>
            <span class="text-sm font-medium text-purple-600 hover:text-purple-500 dark:text-purple-400">
              View Analytics ‚Üí
            </span>
          </a>
          
          <a 
            href="/admin/apps" 
            class="p-4 border border-orange-200 bg-orange-50 dark:bg-orange-950 rounded-lg hover:bg-orange-100 dark:hover:bg-orange-900 transition-colors"
          >
            <h3 class="font-medium mb-2 text-orange-900 dark:text-orange-100">
              üöÄ Apps & Integrations
            </h3>
            <p class="text-sm text-orange-700 dark:text-orange-300 mb-3">
              Manage renovation tools, connected services, and third-party integrations.
            </p>
            <span class="text-sm font-medium text-orange-600 hover:text-orange-500 dark:text-orange-400">
              Manage Apps ‚Üí
            </span>
          </a>
          
          <a 
            href="/admin/settings" 
            class="p-4 border border-gray-200 bg-gray-50 dark:bg-gray-950 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-900 transition-colors"
          >
            <h3 class="font-medium mb-2 text-gray-900 dark:text-gray-100">
              ‚öôÔ∏è Settings
            </h3>
            <p class="text-sm text-gray-700 dark:text-gray-300 mb-3">
              Configure your profile, notifications, security, and system preferences.
            </p>
            <span class="text-sm font-medium text-gray-600 hover:text-gray-500 dark:text-gray-400">
              Open Settings ‚Üí
            </span>
          </a>
          
          <a 
            href="/chat" 
            class="p-4 border border-teal-200 bg-teal-50 dark:bg-teal-950 rounded-lg hover:bg-teal-100 dark:hover:bg-teal-900 transition-colors"
          >
            <h3 class="font-medium mb-2 text-teal-900 dark:text-teal-100">
              ü§ñ AI Assistant
            </h3>
            <p class="text-sm text-teal-700 dark:text-teal-300 mb-3">
              Get expert renovation advice with building codes and regulations.
            </p>
            <span class="text-sm font-medium text-teal-600 hover:text-teal-500 dark:text-teal-400">
              Start Chatting ‚Üí
            </span>
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
