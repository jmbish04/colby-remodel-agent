---
import { buttonVariants } from '@/components/ui/button';
import { Hammer, LayoutDashboard } from 'lucide-react';
import '@/styles/globals.css'
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  };
  const isDark = getThemePreference() === 'dark';
  document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
 
  if (typeof localStorage !== 'undefined') {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
    observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
  }
</script>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Colby Remodel Agent</title>
  </head>
  <body>
    <div class="flex flex-col items-center justify-center gap-4 py-20 px-8 min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800">
      <div class="text-center space-y-6 max-w-2xl">
        <div class="flex items-center justify-center mb-8">
          <Hammer className="w-16 h-16 text-blue-600 dark:text-blue-400" />
        </div>
        <h1 class="text-5xl font-bold text-gray-900 dark:text-white">Colby Remodel Agent</h1>
        <p class="text-xl text-muted-foreground">
          Your intelligent renovation project management assistant. Track progress, manage contractors, and oversee your home remodeling projects with ease.
        </p>
